  <div class="filv_status">

     <% if user_signed_in? %>
    
    <div class="yuusya_image">
    <img src="<%= @filv.avatar_image %>">
     <%= link_to image_tag("yuusya.png", size:"250x250" ), "#" %>
    </div> 

    <div class="status">
      <p class="status__title">Strength: <%= @filv.strength %></p>
      <p class="status__title">Intelligence: <%= @filv.intelligence %></p>
