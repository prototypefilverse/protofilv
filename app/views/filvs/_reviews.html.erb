<div class="reviews_container"> 

<% if @movie.present? %>

  <div class="reviews_header"> 

    <h2 class="reviews__title">Review</h2>

 <div class="button">
  <%= link_to "映画検索", movies_path, class: "movie-search" %>
</div>

  </div>   

  <div class="movie_info"> 

   <h2 class="movie-title"><%= @movie.title %></h2>

    <div class="movie_details">
      <div class="movie_release-date">公開日: <%= @movie.release_at %></div>
      <div class="movie_director">監督: <%= @movie.director %></div>
     </div>
     
      <% if user_signed_in? && !current_user.reviewer.reviews.where(movie: @movie).exists? %>
       <%= link_to 'レビュー投稿', new_movie_review_path(@movie),  class:"review-btn" %>
       <% else %>
        <h4 class="user_reviewed"> あなたはこの映画のレビューを投稿済みです。 </h4> 
      <% end %>

   </div>  

  </div>

<div class="reviews">

 <% @reviews.each do |review| %>

  <div class="review">

    <h4 class="review_title"><%= review.review_title %></h3>

    <div class="review_body"><%= review.review_content %></div>
  
   <div class="review_review">
    このレビューを評価してください
    <div class="review_evaluation">
     <p>感動的：<span class="star">★★★★</span></p>
     <p>論理的：<span class="star">★★★</span></p>
     <p>魅力的：<span class="star">★★</span></p>
    </div>
   </div> 

  </div>

 <% end %>

 <% else %>

<div class="reviews_header">
  <h2 class="reviews__title">Review</h2>
  <p class="reviews__empty-text">レビューしたい映画を検索してください</p>
  <div class="button">
    <%= link_to "映画検索", movies_path, class: "movie-search" %>
  </div>
</div>

<% end %>

</div>



