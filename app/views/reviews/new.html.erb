<h2>新しいレビューを投稿</h2>

<%= form_with model: @review, url: movie_reviews_path(@movie), local: true do |form| %>
  <%= form.hidden_field :movie_id, value: @movie.id %>
  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :e_rating %>
    <%= form.text_field :e_rating, class: "form-control" %>
  </div>
  <%= form.submit "投稿", class: "btn btn-primary" %>
<% end %>